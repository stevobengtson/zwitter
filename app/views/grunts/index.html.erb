<p id="notice"><%= notice %></p>

<h1>Listing Grunts</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Message</th>
      <th>Zombie</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @grunts.each do |grunt| %>
      <tr>
        <td><%= grunt.message %></td>
        <td><%= grunt.zombie.name %></td>
        <td>
					<div class="btn-group">
						<%= link_to 'Show', grunt, class: 'btn btn-xs btn-success' %>
        		<%= link_to 'Edit', edit_grunt_path(grunt), class: 'btn btn-xs btn-warning' %>
        		<%= link_to 'Destroy', grunt, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
					</div>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
	<%= page_entries_info @grunts %>
</div>
<div class="row">
	<%= paginate @grunts %>
</div>
<div class="row">
	<%= link_to 'New Grunt', new_grunt_path, class: 'btn btn-primary' %>
</div>
