<p id="notice"><%= notice %></p>

<h1>Listing Zombies</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Graveyard</th>
      <th>Status</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @zombies.each do |zombie| %>
      <tr>
        <td><%= zombie.name %></td>
        <td><%= zombie.graveyard.name %></td>
        <td><%= zombie.status %></td>
        <td>
					<div class="btn-group">
						<%= link_to 'Show', zombie, class: 'btn btn-xs btn-success' %>
        		<%= link_to 'Edit', edit_zombie_path(zombie), class: 'btn btn-xs btn-warning' %>
        		<%= link_to 'Destroy', zombie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
					</div>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
	<%= page_entries_info @zombies %>
</div>
<div class="row">
	<%= paginate @zombies %>
</div>
<div class="row">
	<%= link_to 'New Zombie', new_zombie_path, class: 'btn btn-primary' %>
</div>
