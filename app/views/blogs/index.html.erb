<p id="notice"><%= notice %></p>

<h1>Listing Blogs</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Zombie</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.body %></td>
        <td><%= blog.zombie.name %></td>
        <td>
					<div class="btn-group">
						<%= link_to 'Show', blog, class: 'btn btn-xs btn-success' %>
        		<%= link_to 'Edit', edit_blog_path(blog), class: 'btn btn-xs btn-warning' %>
        		<%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
					</div>
				</td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="row">
	<%= page_entries_info @blogs %>
</div>
<div class="row">
	<%= paginate @blogs %>
</div>
<div class="row">
	<%= link_to 'New Blog', new_blog_path, class: 'btn btn-primary' %>
</div>
